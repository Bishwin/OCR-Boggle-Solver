<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="w1441879.boggle.TextSolverActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_centerHorizontal="true"
        android:text="ENTER GAME BOARD"
        android:paddingBottom="5dp"
        android:id="@+id/textView" />

    <GridLayout
        android:id="@+id/game_grid"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:columnCount="4"
        android:rowCount="4"
        android:textAlignment="center">

        <EditText
            android:id="@+id/editText1"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_width="@dimen/game_board_size"
            android:layout_height="@dimen/game_board_size"
            android:textAlignment="center"
            android:inputType="textCapCharacters"
            android:text="A"
     />

        <EditText
            android:id="@+id/editText2"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_width="@dimen/game_board_size"
            android:layout_height="@dimen/game_board_size"
            android:textAlignment="center"
            android:inputType="textCapCharacters"
            android:text="B"/>

        <EditText
            android:id="@+id/editText3"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_width="@dimen/game_board_size"
            android:layout_height="@dimen/game_board_size"
            android:textAlignment="center"
            android:inputType="textCapCharacters"
            android:text="C"/>

        <EditText
            android:id="@+id/editText4"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_width="@dimen/game_board_size"
            android:layout_height="@dimen/game_board_size"
            android:textAlignment="center"
            android:inputType="textCapCharacters"
            android:text="D"/>

        <EditText
            android:layout_row="1"
            android:layout_column="0"
            android:layout_width="@dimen/game_board_size"
            android:layout_height="@dimen/game_board_size"
            android:textAlignment="center"
            android:id="@+id/editText5"
            android:inputType="textCapCharacters"
            android:text="E"/>

        <EditText
            android:layout_row="1"
            android:layout_column="1"
            android:layout_width="@dimen/game_board_size"
            android:layout_height="@dimen/game_board_size"
            android:textAlignment="center"
            android:id="@+id/editText6"
            android:inputType="textCapCharacters"
            android:text="F"/>

        <EditText
            android:layout_row="1"
            android:layout_column="2"
            android:layout_width="@dimen/game_board_size"
            android:layout_height="@dimen/game_board_size"
            android:textAlignment="center"
            android:id="@+id/editText7"
            android:inputType="textCapCharacters"
            android:text="G"/>

        <EditText
            android:layout_row="1"
            android:layout_column="3"
            android:layout_width="@dimen/game_board_size"
            android:layout_height="@dimen/game_board_size"
            android:textAlignment="center"
            android:id="@+id/editText8"
            android:inputType="textCapCharacters"
            android:text="H"/>

        <EditText
            android:layout_row="2"
            android:layout_column="0"
            android:layout_width="@dimen/game_board_size"
            android:layout_height="@dimen/game_board_size"
            android:textAlignment="center"
            android:id="@+id/editText9"
            android:inputType="textCapCharacters"
            android:text="I"/>

        <EditText
            android:layout_row="2"
            android:layout_column="1"
            android:layout_width="@dimen/game_board_size"
            android:layout_height="@dimen/game_board_size"
            android:textAlignment="center"
            android:id="@+id/editText10"
            android:inputType="textCapCharacters"
            android:text="J"/>


        <EditText
            android:layout_row="2"
            android:layout_column="2"
            android:layout_width="@dimen/game_board_size"
            android:layout_height="@dimen/game_board_size"
            android:textAlignment="center"
            android:id="@+id/editText11"
            android:inputType="textCapCharacters"
            android:text="K"/>

        <EditText
            android:layout_row="2"
            android:layout_column="3"
            android:layout_width="@dimen/game_board_size"
            android:layout_height="@dimen/game_board_size"
            android:textAlignment="center"
            android:id="@+id/editText12"
            android:inputType="textCapCharacters"
            android:text="L"/>

        <EditText
            android:layout_row="3"
            android:layout_column="0"
            android:layout_width="@dimen/game_board_size"
            android:layout_height="@dimen/game_board_size"
            android:textAlignment="center"
            android:id="@+id/editText13"
            android:inputType="textCapCharacters"
            android:text="M"/>

        <EditText
            android:layout_row="3"
            android:layout_column="1"
            android:layout_width="@dimen/game_board_size"
            android:layout_height="@dimen/game_board_size"
            android:textAlignment="center"
            android:id="@+id/editText14"
            android:inputType="textCapCharacters"
            android:text="N"/>

        <EditText
            android:layout_row="3"
            android:layout_column="2"
            android:layout_width="@dimen/game_board_size"
            android:layout_height="@dimen/game_board_size"
            android:textAlignment="center"
            android:id="@+id/editText15"
            android:inputType="textCapCharacters"
            android:text="O"/>

        <EditText
            android:layout_row="3"
            android:layout_column="3"
            android:layout_width="@dimen/game_board_size"
            android:layout_height="@dimen/game_board_size"
            android:textAlignment="center"
            android:id="@+id/editText16"
            android:inputType="textCapCharacters"
            android:text="P"/>

    </GridLayout>

    <Button
        android:id="@+id/submit_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/game_grid"
        android:text="SUBMIT" />

    <Button
        android:id="@+id/clear_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/game_grid"
        android:layout_toEndOf="@+id/submit_board"
        android:text="CLEAR"/>

</RelativeLayout>
