<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="w1441879.boggle.TextSolverFragment"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_centerHorizontal="true"
        android:text="@string/text_title"
        android:paddingBottom="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/textView" />

    <EditText
        android:id="@+id/game_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/text_input_default"
        android:hint="@string/text_input_hint"
        android:layout_below="@+id/textView"
        android:layout_marginTop="20dp"
        android:inputType="textNoSuggestions"
        android:digits="abcdefghijklmnopqrstuvwxyz"
        android:maxLength="16"
        android:singleLine="true"
        android:foregroundTint="@color/colorAccent"/>

    <Button
        android:id="@+id/submit_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_input_submit"
        android:layout_alignBaseline="@+id/clear_board"
        android:layout_alignBottom="@+id/clear_board"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:id="@+id/clear_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_input_clear"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/game_board"
        android:layout_alignEnd="@+id/textView" />

    <ListView
        android:id="@+id/result_view"
        android:layout_below="@+id/clear_board"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_below="@+id/clear_board"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
